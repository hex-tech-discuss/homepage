// Variables
avatar-size = 3vmax

.ht-text-center
  text-align center
.ht-pull-right
  float right
.ht-grid
  display flex
  flex-wrap wrap
  margin 0.1vmax 0
.ht-cell
  flex 1
for row in 1..12
  .ht-cell-{row}
    flex 0 0 (row * 100 / 12)%
    align-items flex-start

.ht-discuss
  width: 60vw
  min-height: 40vh
  padding: 1vh
  background: #FAFAFA
  border-radius: 3px
  box-shadow: 0 8px 40px 2px #BDBDBD
  article
    margin: 1vh 0
    padding: 1vh 0

.ht-avatar
  border-radius: 50%
  width: avatar-size
  height: avatar-size
  border: 1px solid #CCC
  overflow: hidden
  box-shadow: 0 2px 6px #CCC
  padding: 1px
  cursor: pointer
  transition: box-shadow 0.8s
  margin auto
  &:hover
    box-shadow: 0 2px 10px #757575
  img
    border-radius: 50%
    width: 100%
.ht-author
  margin-top: 0.1vh
  background: #5068A9
  border-radius: 3px
  padding: 0.1vh 0.4vw
  font-size: 0.6em
  color: #F8F8F8
  text-align center
  display inline-block

.ht-comment-box
  padding: 0 0.9vmax
  .ht-content
    min-height avatar-size
  .ht-reply-btn
    padding: 1px
    cursor: pointer
    padding 0.3vmax 0.7vmax
    border-radius 3px
    border-width 0
    background #E9E9E5
    &:focus
      outline 0
  .ht-timestamp
    font-size: 0.1em
    border-radius: 3px
    color: #C0C5CD

@media (max-width: 768px)
  .ht-discuss
    width: 80vw
    min-height: 50vh
    margin: 5vh 0
    article
      flex-wrap: wrap
      border-bottom: 1px solid #D8DDEF
      margin: 2vh 0
      &:last-child
        border: none
      .ht-avatar
        width: 6vmax
        height: 6vmax
        flex: 0 0 6vmax
      .ht-content
        margin: 3vh 1vw
