.hex-tech-discuss
  width: 60vw
  min-height: 40vh
  padding: 1vh
  background: #FAFAFA
  border-radius: 3px
  box-shadow: 0 8px 40px 2px #BDBDBD
  article
    margin: 1vh 0
    padding: 1vh 0
    display: flex
    align-items: top

.hex-tech-head
  .hex-tech-avatar
    border-radius: 50%
    width: 3vmax
    height: 3vmax
    border: 1px solid #CCC
    overflow: hidden
    box-shadow: 0 2px 6px #CCC
    padding: 1px
    justify-content: flex-start
    margin: 0 1vw
    cursor: pointer
    transition: box-shadow 0.8s
    flex: 0 0 3vmax
    &:hover
      box-shadow: 0 2px 10px #757575
    img
      border-radius: 50%
      width: 100%
  .hex-tech-author
    justify-content: center
    text-align: center
    margin-top: 0.1vh
    span
      background: #5068A9
      border-radius: 3px
      padding: 0.1vh 0.4vw
      font-size: 0.6em
      color: #F8F8F8

.hex-tech-comment
  justify-content: flex-end
  padding: 0 0.9vmax
  display: flex
  flex-direction: column
  .hex-tech-content
    align-self: flex-start
  .hex-tech-tools
    display: flex
    .hex-tech-reply
      justify-content: flex-end
      button
        padding: 1px
        cursor: pointer
    .hex-tech-timestamp
      justify-content: flex-start
      span
        font-size: 0.1em
        border-radius: 3px
        padding: 0.1vh 0.4vw
        color: #C0C5CD

@media (max-width: 768px)
  .hex-tech-discuss
    width: 80vw
    min-height: 50vh
    margin: 5vh 0
    article
      flex-wrap: wrap
      border-bottom: 1px solid #D8DDEF
      margin: 2vh 0
      &:last-child
        border: none
      .hex-tech-avatar
        width: 6vmax
        height: 6vmax
        flex: 0 0 6vmax
      .hex-tech-content
        margin: 3vh 1vw
